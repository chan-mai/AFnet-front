{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vue3-toastify/global"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],

  "vueCompilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true 
  }
}
